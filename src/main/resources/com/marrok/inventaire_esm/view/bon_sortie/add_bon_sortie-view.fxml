<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="900.0" spacing="20.0" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.marrok.inventaire_esm.controller.bon_sortie.AddBonSortieController">

    <!-- Title -->
    <Label styleClass="titleLabel" text="إضافة وصل إخــراج" />
    <HBox alignment="CENTER" spacing="40.0">

        <VBox alignment="CENTER">
            <Label styleClass="lbl_fiche_inv" text="التاريخ" />
            <DatePicker fx:id="datePicker" styleClass="smallDashboard_btn" />
        </VBox>

    </HBox>
    <!-- TableView for multiple Bon Entrée items -->
    <VBox prefHeight="263.0" prefWidth="860.0" spacing="10" style="-fx-padding: 10;">
        <TableView fx:id="sortieTable">
            <columns>
                <TableColumn fx:id="id_bon_sortie" text="المعرف" />
                <TableColumn fx:id="employeur" text="الموظف" />
                <TableColumn fx:id="date" text="التاريخ" />

            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
    <!-- Add/Remove Item Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="removeItemButton" contentDisplay="GRAPHIC_ONLY" onAction="#removeItem" styleClass="smallDashboard_btn" text="إزالة">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../img/minus.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="addItemButton" contentDisplay="GRAPHIC_ONLY" onAction="#addItem" styleClass="smallDashboard_btn" text="إظافة">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../img/plus.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

    </HBox>

    <!-- Save and Cancel Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
        <Button fx:id="cancelButton" onAction="#cancelBonSortie" styleClass="btn_bon" text="الغاء الوصل" />
        <Button fx:id="printButton" onAction="#printBonSortie" style=" -fx-background-color: #0aa457;" styleClass="btn_bon" text="طباعة الوصل" />
        <Button fx:id="saveButton" layoutX="756.0" layoutY="20.0" onAction="#saveBonSortie" style=" -fx-background-color: #0aa457;" styleClass="btn_bon" text="تاكيد الوصل" />
    </HBox>


    <!-- Stylesheets -->
    <stylesheets>
        <URL value="@../../css/all.css" />
        <URL value="@../../css/tableview.css" />
    </stylesheets>
</VBox>

