<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="900.0" spacing="20.0" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.bon_entree.BonEntreeController">

    <!-- Title -->
    <Label styleClass="titleLabel" text="وصل إستلام" />

    <!-- Form for Bon Entrée details -->
    <HBox alignment="TOP_RIGHT" spacing="40.0">
        <VBox alignment="CENTER">
            <Label styleClass="lbl_fiche_inv" text="المورد" />
            <ChoiceBox fx:id="fournisseurChoiceBox" styleClass="smallDashboard_btn" />
        </VBox>
        <VBox alignment="CENTER">
            <Label styleClass="lbl_fiche_inv" text="التاريخ" />
            <DatePicker fx:id="datePicker" styleClass="smallDashboard_btn" />
        </VBox>
    </HBox>

    <!-- TableView for multiple Bon Entrée items -->
    <VBox prefHeight="263.0" prefWidth="860.0" spacing="10" style="-fx-padding: 10;">
        <TableView fx:id="entreeTable">
            <columns>
                <TableColumn fx:id="articleColumn" prefWidth="150" text="العنصر" />
                <TableColumn fx:id="quantityColumn" prefWidth="100" text="الكمية" />
                <TableColumn fx:id="priceColumn" prefWidth="150" text="(P U HT) سعر الوحدة" />
                <TableColumn fx:id="totalColumn" prefWidth="150" text="المجموع (HT)" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Add/Remove Item Buttons -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="removeItemButton" onAction="#removeItem" text="إزالة" />
            <Button fx:id="addItemButton" onAction="#addItem" text="إظافة" />
        </HBox>
    </VBox>

    <!-- Save and Cancel Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
        <Button fx:id="cancelButton" onAction="#cancelBonEntree" styleClass="btn_bon" text="الغاء الوصل" />
        <Button fx:id="saveButton" onAction="#saveBonEntree" style=" -fx-background-color: #0aa457;" styleClass="btn_bon" text="تاكيد الوصل" />
    </HBox>

    <!-- Stylesheets -->
    <stylesheets>
        <URL value="@../../css/all.css" />
        <URL value="@../../css/tableview.css" />
    </stylesheets>
</VBox>
