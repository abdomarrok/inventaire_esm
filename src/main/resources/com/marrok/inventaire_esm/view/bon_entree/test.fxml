<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.marrok.inventaire_esm.controller.bon_entree.BonEntreeController">
    <!-- Top section: Header with Bon Entree details -->
    <top>
        <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 10;">
            <Label text="Bon Entrée" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <!-- Form for Bon Entrée details -->
            <GridPane hgap="10" vgap="10">
                <Label text="Fournisseur:" />
                <ChoiceBox fx:id="fournisseurChoiceBox" prefWidth="200" />

                <Label text="Date:" />
                <DatePicker fx:id="datePicker" prefWidth="200" />

                <Label text="Numéro Bon Entrée:" />
                <TextField fx:id="numBonEntreeField" prefWidth="200" />

                <Label text="Remarque:" />
                <TextArea fx:id="remarqueField" prefWidth="400" prefHeight="60" />
            </GridPane>
        </VBox>
    </top>

    <!-- Center section: Table for multiple entries -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <!-- TableView for Bon Entree items -->
            <TableView fx:id="entreeTable">
                <columns>
                    <TableColumn fx:id="articleColumn" text="Article" prefWidth="150" />
                    <TableColumn fx:id="quantityColumn" text="Quantité" prefWidth="100" />
                    <TableColumn fx:id="priceColumn" text="Prix Unitaire" prefWidth="100" />
                    <TableColumn fx:id="totalColumn" text="Total" prefWidth="100" />
                </columns>
            </TableView>

            <!-- Controls for adding/removing items -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="addItemButton" text="Ajouter Ligne" />
                <Button fx:id="removeItemButton" text="Supprimer Ligne" />
            </HBox>
        </VBox>
    </center>

    <!-- Bottom section: Save and Cancel buttons -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <Button fx:id="cancelButton" text="Annuler" />
            <Button fx:id="saveButton" text="Enregistrer" />
        </HBox>
    </bottom>
</BorderPane>
