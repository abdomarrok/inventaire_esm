<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10.0" styleClass="background" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.service.UpdateServiceController">
    <children>
        <Label fx:id="titleLabel" alignment="CENTER" contentDisplay="CENTER" styleClass="titleLabel" text="تحديث مصلحة" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER" />
        <TextField fx:id="nameField" layoutX="100.0" layoutY="10.0" prefWidth="200.0" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" styleClass="lbl" text="إسم المصلحة :" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button fx:id="updateButton" layoutX="100.0" layoutY="50.0" onAction="#updateService" text="حفظ" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <styleClass>
                <String fx:value="btn" />
                <String fx:value="add_btn" />
            </styleClass>
        </Button>
        <Button fx:id="cancelButton" layoutX="180.0" layoutY="50.0" onAction="#cancel" text="إلغاء" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <styleClass>
                <String fx:value="btn" />
                <String fx:value="cencel_btn" />
            </styleClass>
        </Button>
    </children>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints prefHeight="50" />


    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <stylesheets>
<!--        <URL value="@../../css/nord-light.css" />-->
        <URL value="@../../css/all.css" />
    </stylesheets>
</GridPane>
