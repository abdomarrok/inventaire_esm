<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10.0" styleClass="background" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.service.AddServiceController">

    <children>
        <Label styleClass="titleLabel" text="إضافة مصلحة" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
        <Label styleClass="lbl" text="إسم المصلحة :" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
        <TextField fx:id="nameField" prefWidth="200.0" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

        <Button fx:id="saveButton" onAction="#saveService" text="حفظ" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2">
            <styleClass>
                <String fx:value="btn" />
                <String fx:value="add_btn" />
            </styleClass>
        </Button>
        <Button fx:id="cancelButton" onAction="#cancel" text="الغاء" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">
            <styleClass>
                <String fx:value="btn" />
                <String fx:value="cencel_btn" />
            </styleClass>
        </Button>

    </children>
    <stylesheets>
<!--        <URL value="@../../css/nord-light.css" />-->
        <URL value="@../../css/all.css" />
    </stylesheets>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
