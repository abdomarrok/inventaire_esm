<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minWidth="500.0" prefHeight="700.0" prefWidth="1000.0" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.service.ServicesController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <top>
            <HBox fx:id="topBox" alignment="CENTER" prefHeight="90.0" prefWidth="1000.0" spacing="50.0" styleClass="header_bar" BorderPane.alignment="CENTER">
                <children>
                    <TextField fx:id="searchField" alignment="CENTER" minWidth="200" promptText="بحث ..." styleClass="searchField" />
                    <Label fx:id="titleLabel" styleClass="titleLabel" text="تسيير المصالح" HBox.hgrow="SOMETIMES" />

                </children>
                <BorderPane.margin>
                    <Insets />
                </BorderPane.margin>
            </HBox>
        </top>
        <right>
            <VBox fx:id="leftBox" prefHeight="444.0" prefWidth="100.0" spacing="20.0" styleClass="left_panel" BorderPane.alignment="CENTER">
                <children>
                    <Button fx:id="addButton" onAction="#addService" text="إضافة">
                        <styleClass>
                            <String fx:value="btn" />
                            <String fx:value="add_btn" />
                        </styleClass>
                    </Button>
                    <Button fx:id="updateButton" onAction="#updateService" styleClass="cencel_btn" text="تحديث">
                        <styleClass>
                            <String fx:value="btn" />
                            <String fx:value="btn-warning" />
                        </styleClass>
                    </Button>
                    <Button fx:id="deleteButton" onAction="#deleteService" styleClass="btn-danger" text="حذف">
                        <styleClass>
                            <String fx:value="btn" />
                            <String fx:value="btn-danger" />
                        </styleClass>
                    </Button>
                </children>
                <padding>
                    <Insets left="10.0" right="10.0" />
                </padding>
            </VBox>
        </right>
        <center>
            <VBox fx:id="centerBox" prefWidth="860.0" BorderPane.alignment="CENTER">
                <children>


                    <TableView fx:id="servicesTable" editable="true" nodeOrientation="RIGHT_TO_LEFT" prefHeight="281.0" prefWidth="900.0" styleClass="tableview" stylesheets="@../../css/tableview.css">
                        <columns>
                            <TableColumn fx:id="idColumn" prefWidth="140.0" text="المعرف" />
                            <TableColumn fx:id="nameColumn" prefWidth="718.0" text="إسم المصلحة" />
                        </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                    </TableView>
                </children>
            </VBox>
        </center>

        <bottom>

            <Button fx:id="bk_Dashboard_from_services" text="الرئيسية" BorderPane.alignment="BOTTOM_RIGHT">
                <BorderPane.margin>
                    <Insets />
                </BorderPane.margin>
                <styleClass>
                    <String fx:value="btn" />
                    <String fx:value="go_back_dash_btn" />
                </styleClass>
            </Button>

        </bottom>

    </BorderPane>
    <stylesheets>
<!--        <URL value="@../../css/nord-light.css" />-->
        <URL value="@../../css/all.css" />
    </stylesheets>
</AnchorPane>
