<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="dashboard_id" fx:id="fx_dashboard_id" minWidth="500.0" prefHeight="700.0" prefWidth="1000.0" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.employer.EmployerController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <top>
            <HBox fx:id="topBox" alignment="CENTER" prefHeight="64.0" prefWidth="810.0" spacing="50.0" styleClass="header_bar" BorderPane.alignment="CENTER">
                <children>
                    <TextField fx:id="searchField" alignment="CENTER" minWidth="200" promptText="بحث..." styleClass="searchField" />

                    <Label fx:id="titleLabel" styleClass="titleLabel" text="إدارة المــوظفين" HBox.hgrow="SOMETIMES" />
                    <!--                    <ToggleButton fx:id="switchThemeBtn_employer" alignment="TOP_RIGHT" contentDisplay="GRAPHIC_ONLY" maxHeight="24" maxWidth="24" onAction="#switchTheme" styleClass="toggle_button" textAlignment="RIGHT">-->
                    <!--                        <graphic>-->
                    <!--                            <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">-->
                    <!--                                <Image requestedHeight="24" requestedWidth="24" url="@../../img/dark_icon.png" />-->
                    <!--                            </ImageView>-->
                    <!--                        </graphic>-->
                    <!--                    </ToggleButton>-->
                </children>
                <BorderPane.margin>
                    <Insets />
                </BorderPane.margin>
            </HBox>
        </top>
        <right>
            <VBox fx:id="leftBox" prefHeight="444.0" prefWidth="100.0" spacing="20.0" styleClass="left_panel" BorderPane.alignment="CENTER">

                <Button fx:id="addButton" onAction="#addEmployer" text="إضافة">
                    <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="add_btn" />
                    </styleClass>
                </Button>
                <Button fx:id="updateButton" onAction="#updateEmployer" text="تحديث">
                    <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-warning" />
                    </styleClass>
                </Button>
                <Button fx:id="deleteButton" onAction="#deleteEmployer" text="حذف">
                    <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="btn-danger" />
                    </styleClass>
                </Button>
                <padding>
                    <Insets left="10.0" right="10.0" />
                </padding>

            </VBox>
        </right>
        <center>
            <VBox fx:id="centerBox" BorderPane.alignment="CENTER">
                <children>
                    <TableView fx:id="tableView" styleClass="tableview" stylesheets="@../../css/tableview.css">
                        <columns>
                            <TableColumn fx:id="id_column" text="المعرف" />
                            <TableColumn fx:id="firstname_column" text="الاسم الأول" />
                            <TableColumn fx:id="lastname_column" text="الاسم الأخير" />
                            <TableColumn fx:id="title_column" text="الوظيفة" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
            </VBox>
        </center>
        <bottom>

            <Button fx:id="bk_Dashboard_from_employers" text="الرئيسية" BorderPane.alignment="BOTTOM_RIGHT">
                <BorderPane.margin>
                    <Insets />
                </BorderPane.margin>
                <styleClass>
                    <String fx:value="btn" />
                    <String fx:value="go_back_dash_btn" />
                </styleClass>
            </Button>

        </bottom>

    </BorderPane>
    <stylesheets>
<!--        <URL value="@../../css/nord-light.css" />-->
        <URL value="@../../css/all.css" />
    </stylesheets>
</AnchorPane>
