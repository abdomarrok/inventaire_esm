<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="dashboard_id" fx:id="fx_dashboard_id" minWidth="500.0" prefHeight="700.0" prefWidth="1000.0" styleClass="background" stylesheets="@../../css/all.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.article.EtatStockController">
   <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

       <top>
           <HBox fx:id="topBox" spacing="10.0" alignment="CENTER_LEFT">
               <children>
                   <HBox>
                       <Button fx:id="bk_Dashboard_from_etat_stock" contentDisplay="GRAPHIC_ONLY" styleClass="home_btn" text="الرئيسية">
                           <graphic>
                               <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                   <image>
                                       <Image url="@../../img/home.png" />
                                   </image>
                               </ImageView>
                           </graphic>
                           <BorderPane.margin>
                               <Insets bottom="10.0" />
                           </BorderPane.margin>
                       </Button>
                   </HBox>

                   <HBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                       <!-- Search Field -->
                       <TextField fx:id="searchField" alignment="CENTER_RIGHT" minWidth="200" promptText="بحث..." styleClass="searchField" />

                       <!-- ChoiceBox for Category Filter -->
                       <ChoiceBox fx:id="categoryFilter" prefWidth="150.0" styleClass="filterChoiceBox" />

                       <!-- Title Label -->
                       <Label fx:id="titleLabel" prefHeight="96.0" prefWidth="260.0" styleClass="titleLabel" text="حالة المخزون" HBox.hgrow="SOMETIMES" />
                   </HBox>
               </children>
               <BorderPane.margin>
                   <Insets />
               </BorderPane.margin>
           </HBox>
       </top>

       <right>
        <VBox fx:id="leftBox" alignment="TOP_RIGHT" spacing="20.0">
            <padding>
                <Insets left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="BonEntreeBtn" onAction="#goBonEntree" text="إضافة ">
               <styleClass>
                  <String fx:value="add_btn" />
                  <String fx:value="btn_bon" />
               </styleClass></Button>
            <Button fx:id="BonSortieBtn" onAction="#goBonSortie" text=" إخراج">
               <styleClass>
                  <String fx:value="btn_bon" />
                  <String fx:value="btn-danger" />
               </styleClass></Button>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <BorderPane.margin>
               <Insets />
            </BorderPane.margin>
        </VBox>
    </right>
    <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="tableView" editable="true" nodeOrientation="RIGHT_TO_LEFT" stylesheets="@../../css/tableview.css" tableMenuButtonVisible="true">
                    <columns>
                        <TableColumn fx:id="id_article_v" prefWidth="100.0" text="المعرف" />
                        <TableColumn fx:id="nameColumn" minWidth="200.0" prefWidth="200.0" text="الاسم" />
                        <TableColumn fx:id="unitColumn" prefWidth="100.0" text="الوحدة" />
                        <TableColumn fx:id="entreeColumn" prefWidth="130.0" style="-fx-background-color: #4CAF50;" styleClass="specialColmun" text="دخول" />
                        <TableColumn fx:id="sortieColumn" prefWidth="130.0" style="-fx-background-color: #FF5722;" styleClass="specialColmun" text="خروج" />
                        <TableColumn fx:id="retourColumn" prefWidth="130.0" style="-fx-background-color: #b48d8d;" styleClass="specialColmun" text="إرجاع" />
                        <TableColumn fx:id="editColumn" prefWidth="130.0" style="-fx-background-color: #0a8da4;" styleClass="specialColmun" text="التعديل" />
                        <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="الكمية" />
                    <!--<TableColumn fx:id="descriptionColumn" prefWidth="110.0" text="الوصف" />-->
                        <TableColumn fx:id="categoryColmun" prefWidth="150.0" text="الفئة" />
                        <TableColumn fx:id="remarkColumn" prefWidth="150.0" text="ملاحظة" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>

    </center>

   </BorderPane>
</AnchorPane>
