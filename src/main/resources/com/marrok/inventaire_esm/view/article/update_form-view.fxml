<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane hgap="10" styleClass="background" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.article.UpdateController">
    <children>
        <Label fx:id="titleLabel" alignment="CENTER" styleClass="titleLabel" text="تحديث عنصر" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label alignment="CENTER" styleClass="lbl" text="الاسم :" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <TextField fx:id="nameField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

        <Label alignment="CENTER" styleClass="lbl" text="الوحدة :" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
        <TextField fx:id="uniteField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />


        <Label alignment="CENTER" styleClass="lbl" text="ملاحظة:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
        <TextField fx:id="remarqueField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3" />

        <Label alignment="CENTER" styleClass="lbl" text="الوصف :" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
        <TextField fx:id="descriptionField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4" />

        <Label alignment="CENTER" styleClass="lbl" text="الفئة :" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
        <ChoiceBox fx:id="categoryChoiceBox"  prefHeight="38.0" prefWidth="260.0"  styleClass="smallDashboard_btn" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="5" />

        <HBox spacing="10.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="CENTER">
        <Button onAction="#updateArticle" prefHeight="26.0" prefWidth="97.0" text="تحديث" textAlignment="RIGHT">
            <styleClass>
                <String fx:value="btn" />
                <String fx:value="add_btn" />
            </styleClass>
        </Button>

        <Button onAction="#cancel" prefHeight="26.0" prefWidth="99.0" text="الغاء">
            <styleClass>
                <String fx:value="btn" />
                <String fx:value="cencel_btn" />

            </styleClass>
        </Button>
        </HBox>
    </children>

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />

    </rowConstraints>
    <stylesheets>
<!--        <URL value="@../../css/primer-light.css" />-->
        <URL value="@../../css/all.css" />
    </stylesheets>
</GridPane>
