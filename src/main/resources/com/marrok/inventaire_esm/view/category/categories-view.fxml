<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minWidth="500.0" prefHeight="700.0" prefWidth="1000.0" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.category.CategoriesController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <top>

            <HBox fx:id="topBox" alignment="CENTER">
                <children>
                    <HBox alignment="CENTER" prefHeight="96.0" prefWidth="70.0">
                        <Button contentDisplay="GRAPHIC_ONLY" onAction="#go_Dashboard" styleClass="smallDashboard_btn" text="الرئيسية" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
                            <graphic>
                                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../img/home.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <BorderPane.margin>
                                <Insets bottom="10.0" />
                            </BorderPane.margin>
                        </Button>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="96.0" prefWidth="887.0" spacing="50.0">
                        <TextField fx:id="search_cat_txt" alignment="CENTER_RIGHT" minWidth="200" promptText="بحث..." />
                                          <Label styleClass="titleLabel" text="تسيير الفئات" HBox.hgrow="SOMETIMES" />
                    </HBox>

                </children>
                <BorderPane.margin>
                    <Insets />
                </BorderPane.margin>
            </HBox>
        </top>
        <right>

          <ButtonBar prefHeight="460.0" prefWidth="111.0" BorderPane.alignment="CENTER">

              <buttons>
            <VBox spacing="10.0">

                    <Button fx:id="addButton" contentDisplay="CENTER" onAction="#addCategory" text="أظف" textAlignment="CENTER">
                        <styleClass>
                            <String fx:value="btn" />
                            <String fx:value="add_btn" />
                        </styleClass></Button>
                    <Button fx:id="updateButton" contentDisplay="CENTER" onAction="#updateCategory" text="تحديث" textAlignment="CENTER">
                        <styleClass>
                            <String fx:value="btn" />
                            <String fx:value="cencel_btn" />
                        </styleClass>
                    </Button>
                    <Button fx:id="deleteButton" contentDisplay="CENTER" onAction="#deleteCategory" text="حذف" textAlignment="CENTER">
                        <styleClass>
                            <String fx:value="btn" />
                            <String fx:value="btn-danger" />
                        </styleClass>
                    </Button>
            </VBox>
              </buttons>
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding>
          </ButtonBar>

   </right>

   <center>
      <VBox prefHeight="362.0" prefWidth="710.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="cat_tableView" nodeOrientation="RIGHT_TO_LEFT" prefHeight="241.0" prefWidth="710.0" styleClass="tableview" stylesheets="@../../css/tableview.css">
              <columns>
                <TableColumn fx:id="cat_id" prefWidth="155.0" text="المعرف" />
                <TableColumn fx:id="cat_name" prefWidth="692.0" text="الاسم" />
              </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
        <bottom>
        


        </bottom>
    </BorderPane>
    <stylesheets>
<!--        <URL value="@../../css/nord-light.css" />-->
        <URL value="@../../css/all.css" />
    </stylesheets>
</AnchorPane>
