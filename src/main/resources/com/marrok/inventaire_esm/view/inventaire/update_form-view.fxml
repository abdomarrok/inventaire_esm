<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" styleClass="background" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.inventaire.UpdateController">
    <Label fx:id="titleLabel" alignment="CENTER" styleClass="titleLabel" text="تحديث  جرد" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
    <Label alignment="CENTER" styleClass="lbl" text="المكان" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
    <ChoiceBox fx:id="locationChoiceBox" minWidth="150.0" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <Label alignment="CENTER" styleClass="lbl" text="العنصر" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
    <ChoiceBox fx:id="articleChoiceBox" minWidth="150.0" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <Label alignment="CENTER" styleClass="lbl" text="الموظف المعني" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
    <ChoiceBox fx:id="employerChoiceBox" minWidth="150.0" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Label alignment="CENTER" styleClass="lbl" text="رقم الجرد" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
    <TextField fx:id="employerInventaireCode" minHeight="40.0" minWidth="150.0" prefWidth="150.0" promptText="0000000000" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button fx:id="updateButton" onAction="#handleUpdate" text="تحديث" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="5">
        <styleClass>
        <String fx:value="btn" />
        <String fx:value="add_btn" />
    </styleClass>
    </Button>
    <Button fx:id="cancelButton" onAction="#handleCancel" text="الغاء" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5">
        <styleClass>
            <String fx:value="btn" />
            <String fx:value="cencel_btn" />
        </styleClass>

    </Button>

    <columnConstraints>
        <ColumnConstraints percentWidth="50.0" />
        <ColumnConstraints percentWidth="50.0" />
      <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
      <RowConstraints />
      <RowConstraints />
    </rowConstraints>
    <stylesheets>
<!--        <URL value="@../../css/nord-light.css" />-->
        <URL value="@../../css/all.css" />
    </stylesheets>
</GridPane>
