<?xml version="1.0" encoding="UTF-8"?>

<?import com.dlsc.gemsfx.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" styleClass="background" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.inventaire.UpdateController_test">
    <Label fx:id="titleLabel" alignment="CENTER" styleClass="titleLabel" text="تحديث  جرد" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
    <Label alignment="CENTER" styleClass="lbl" text="المكان" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
    <ChoiceBox fx:id="locationChoiceBox" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

    <Label alignment="CENTER" styleClass="lbl" text="العنصر" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
    <VBox alignment="CENTER" prefHeight="321.0" prefWidth="248.0" spacing="10.0" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <FilterView fx:id="filterView" minWidth="400.0" nodeOrientation="RIGHT_TO_LEFT" styleClass="filterview" title="بحث عن العنصر" VBox.vgrow="ALWAYS" />

        <TableView fx:id="tbData" maxWidth="Infinity" nodeOrientation="RIGHT_TO_LEFT" styleClass="tableview" stylesheets="@../../css/tableview.css" HBox.hgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="id" prefWidth="75.0" text="المعرف" />
                <TableColumn fx:id="article_name" prefWidth="150.0" text="إسم العنصر" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>
<!--    <ChoiceBox fx:id="articleChoiceBox" minWidth="150.0" GridPane.columnIndex="0" GridPane.rowIndex="2" />-->

    <Label alignment="CENTER" styleClass="lbl" text="الموظف المعني" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
    <ChoiceBox fx:id="employerChoiceBox" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
    <Label alignment="CENTER" styleClass="lbl" text="رقم الجرد" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
    <TextField fx:id="employerInventaireCode" promptText="0000000000" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button fx:id="updateButton" onAction="#handleUpdate" text="تحديث" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="5">
        <styleClass>
        <String fx:value="btn" />
        <String fx:value="add_btn" />
    </styleClass>
    </Button>
    <Button fx:id="cancelButton" onAction="#handleCancel" text="الغاء" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5">
        <styleClass>
            <String fx:value="btn" />
            <String fx:value="cencel_btn" />
        </styleClass>

    </Button>

    <columnConstraints>
        <ColumnConstraints percentWidth="50.0" />
        <ColumnConstraints halignment="CENTER" percentWidth="50.0" />
      <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints minHeight="200.0" valignment="TOP" />
        <RowConstraints />
      <RowConstraints />
      <RowConstraints />
    </rowConstraints>
    <stylesheets>
<!--        <URL value="@../../css/nord-light.css" />-->
        <URL value="@../../css/all.css" />
    </stylesheets>
</GridPane>
