<GridPane alignment="CENTER" hgap="10" styleClass="background" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.inventaire.AddController">
    <children>
        <Label fx:id="titleLabel" alignment="CENTER" styleClass="titleLabel" text="إضافة جرد" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" />


        <Label alignment="TOP_RIGHT" contentDisplay="RIGHT" styleClass="lbl" text="المكان" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <ChoiceBox fx:id="locationChoiceBox" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

        <Label alignment="CENTER" styleClass="lbl" text="العنصر" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <VBox alignment="CENTER" prefHeight="321.0" prefWidth="248.0" spacing="10.0" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        <FilterView fx:id="filterView" minWidth="400.0" nodeOrientation="RIGHT_TO_LEFT" styleClass="filterview" title="بحث عن العنصر" />

            <TableView fx:id="tbData" maxWidth="Infinity" nodeOrientation="RIGHT_TO_LEFT" styleClass="tableview" stylesheets="@../../css/tableview.css" HBox.hgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="id" prefWidth="75.0" text="المعرف" />
                    <TableColumn fx:id="article_name" prefWidth="150.0" text="إسم العنصر" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
<!--        <ChoiceBox fx:id="articleChoiceBox" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />-->

        <Label alignment="CENTER" styleClass="lbl" text="الموظف" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <ChoiceBox fx:id="employerChoiceBox" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
        <Label alignment="CENTER" styleClass="lbl" text="رقم الجرد" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <TextField fx:id="employerInventaireCode" promptText="0000000000" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Label alignment="CENTER" layoutX="440.0" layoutY="577.0" styleClass="lbl" text="حالة الجرد" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <ChoiceBox fx:id="status_inventaire" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
        <Label alignment="CENTER" layoutX="440.0" layoutY="577.0" styleClass="lbl" text="التاريخ" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <DatePicker fx:id="calendarPicker1" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="6" />
        <Button fx:id="saveButton" alignment="CENTER" onAction="#handleAdd" prefHeight="26.0" prefWidth="97.0" text="اضافة" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="7">

            <styleClass>
                <String fx:value="btn" />
                <String fx:value="add_btn" />
            </styleClass>
        </Button>
        <Button fx:id="cancelButton" onAction="#handleCancel" prefHeight="26.0" prefWidth="97.0" text="الغاء" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="7">
            <styleClass>
                <String fx:value="btn" />
                <String fx:value="cencel_btn" />
            </styleClass>
        </Button>




    </children>

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
      <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints prefHeight="50.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
    </rowConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <stylesheets>
<!--        <URL value="@../../css/nord-light.css" />-->
        <URL value="@../../css/all.css" />
    </stylesheets>
</GridPane>
