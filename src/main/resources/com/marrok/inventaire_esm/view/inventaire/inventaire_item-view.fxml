<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="dashboard_id" fx:id="fx_dashboard_id" minWidth="500.0" prefHeight="700.0" prefWidth="1000.0" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.inventaire.InventaireItemController">
    <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <right>
            <VBox fx:id="leftBox" prefHeight="444.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
                <children>
                    <Button fx:id="addButton" onAction="#addInventaireItem" text="إضافة">
                        <styleClass>
                            <String fx:value="btn" />
                            <String fx:value="add_btn" />
                        </styleClass>
                    </Button>
                    <Button fx:id="updateButton" onAction="#updateInventaireItem" text="تحديث">
                        <styleClass>
                            <String fx:value="btn" />
                            <String fx:value="cencel_btn" />
                        </styleClass>
                    </Button>
                    <Button fx:id="deleteButton" onAction="#deleteInventaireItem" text="حذف">
                        <styleClass>
                            <String fx:value="btn" />
                            <String fx:value="btn-danger" />
                        </styleClass>
                    </Button>
                </children>
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding>
            </VBox>
        </right>
        <center>
            <VBox fx:id="centerBox" BorderPane.alignment="CENTER">
                <children>
                    <TableView fx:id="tableView" nodeOrientation="RIGHT_TO_LEFT" styleClass="tableview" stylesheets="@../../css/tableview.css">
                        <columns>
                            <TableColumn fx:id="idInventaireColumn" text="المعرف" />
                            <TableColumn fx:id="articleIdColumn" text="معرف المادة" />
                            <TableColumn fx:id="localisationIdColumn" text=" الموقع" />
                            <TableColumn fx:id="employerIdColumn" text="الموظف المعني" />
                            <TableColumn fx:id="barcodeColumn" text="رقم الجرد" />
                            <TableColumn fx:id="statusColmun" text="الحالة" />
                        </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                    </TableView>
                </children>
            </VBox>
        </center>
        <bottom>
            <HBox alignment="TOP_RIGHT" spacing="10.0">
                <Button fx:id="btn_fich_inventaire" alignment="CENTER" contentDisplay="RIGHT" onAction="#goFicheInventaire" text="استخراج ملف الجرد" HBox.hgrow="ALWAYS">
                    <styleClass>
                        <String fx:value="btn_fiche_inv" />
                    </styleClass>
                </Button>
                <Button fx:id="bk_Dashboard_from_inventaireitem" text="الرئيسية">
                    <styleClass>
                        <String fx:value="btn" />
                    </styleClass>
                </Button>

            </HBox>






        </bottom>
        <top>
            <HBox fx:id="topBox" alignment="CENTER" prefHeight="64.0" prefWidth="810.0" spacing="50.0" styleClass="header_bar" BorderPane.alignment="CENTER">
                <children>
                    <TextField fx:id="searchField" alignment="CENTER" minWidth="200" promptText="بحث..." styleClass="searchField" />
                    <Label fx:id="titleLabel" styleClass="titleLabel" text="إدارة الجــــــرد" HBox.hgrow="SOMETIMES" />

                </children>
                <BorderPane.margin>
                    <Insets />
                </BorderPane.margin>
            </HBox>
        </top>
    </BorderPane>
    <stylesheets>
<!--        <URL value="@../../css/nord-light.css" />-->
        <URL value="@../../css/all.css" />
    </stylesheets>
</AnchorPane>
