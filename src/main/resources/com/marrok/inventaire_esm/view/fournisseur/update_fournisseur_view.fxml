<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<?import java.lang.String?>
<GridPane hgap="10" vgap="15" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.fournisseur.UpdateController">

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>

    <children>
        <!-- Title Label -->
        <Label fx:id="titleLabel" alignment="CENTER" styleClass="titleLabel" text="تعديل مورد" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <!-- Name Field -->
        <Label alignment="TOP_RIGHT" contentDisplay="RIGHT" styleClass="lbl" text="الاسم:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <TextField fx:id="nameField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

        <!-- RC Field -->
        <Label alignment="CENTER" styleClass="lbl" text="السجل التجاري (RC):" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
        <TextField fx:id="rcField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />

        <!-- NIF Field -->
        <Label alignment="CENTER" styleClass="lbl" text="الرقم الضريبي (NIF):" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
        <TextField fx:id="nifField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3" />

        <!-- AI Field -->
        <Label alignment="CENTER" styleClass="lbl" text="الرمز الضريبي (AI):" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
        <TextField fx:id="aiField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4" />

        <!-- NIS Field -->
        <Label alignment="CENTER" styleClass="lbl" text="رقم التعريف الإحصائي (NIS):" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
        <TextField fx:id="nisField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="5" />

        <!-- Tel Field -->
        <Label alignment="CENTER" styleClass="lbl" text="الهاتف:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
        <TextField fx:id="telField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="6" />

        <!-- Fax Field -->
        <Label alignment="CENTER" styleClass="lbl" text="الفاكس:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="7" />
        <TextField fx:id="faxField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="7" />

        <!-- Address Field -->
        <Label alignment="CENTER" styleClass="lbl" text="العنوان:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="8" />
        <TextField fx:id="addressField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="8" />

        <!-- Email Field -->
        <Label alignment="CENTER" styleClass="lbl" text="البريد الإلكتروني:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="9" />
        <TextField fx:id="emailField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="9" />

        <!-- Update and Cancel Buttons -->
        <Button onAction="#handleUpdateFournisseur" prefHeight="26.0" prefWidth="97.0" text="تعديل" textAlignment="RIGHT" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="10">
            <styleClass>
                <String fx:value="btn" />
                <String fx:value="add_btn" />
            </styleClass>
        </Button>

        <Button onAction="#handleCancel" prefHeight="26.0" prefWidth="99.0" text="إلغاء" GridPane.halignment="CENTER" GridPane.rowIndex="10">
            <styleClass>
                <String fx:value="btn" />
                <String fx:value="cancel_btn" />
            </styleClass>
        </Button>
    </children>

    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

    <stylesheets>
        <URL value="@../../css/all.css" />
    </stylesheets>
</GridPane>
