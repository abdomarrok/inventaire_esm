<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" prefHeight="600.0" prefWidth="900.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marrok.inventaire_esm.controller.fournisseur.UpdateController">



     <children>
    <Label fx:id="titleLabel" alignment="CENTER" styleClass="titleLabel" text="تحديث مورد" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <HBox alignment="CENTER" spacing="20.0">



        <GridPane hgap="10.0" vgap="10.0">
            <Label alignment="CENTER" styleClass="lbl" text="رقم الحساب البنكي (RIB):" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <TextField fx:id="ribField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />


            <Label alignment="CENTER" styleClass="lbl" text="الهاتف:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
            <TextField fx:id="telField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />

            <Label alignment="CENTER" styleClass="lbl" text="الفاكس:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
            <TextField fx:id="faxField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3" />

            <Label alignment="CENTER" styleClass="lbl" text="العنوان:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
            <TextField fx:id="addressField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4" />

            <Label alignment="CENTER" styleClass="lbl" text="البريد الإلكتروني:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
            <TextField fx:id="emailField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>


        <GridPane hgap="10.0" vgap="10.0">


            <Label alignment="TOP_RIGHT" contentDisplay="RIGHT" styleClass="lbl" text="الاسم:" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

            <Label alignment="CENTER" styleClass="lbl" text="السجل التجاري (RC):" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
            <TextField fx:id="rcField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />

            <Label alignment="CENTER" styleClass="lbl" text="رقم التعريف الضريبي(NIF):" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
            <TextField fx:id="nifField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3" />

            <Label alignment="CENTER" styleClass="lbl" text="الرمز الضريبي (AI):" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
            <TextField fx:id="aiField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4" />

            <Label alignment="CENTER" styleClass="lbl" text="رقم التعريف الإحصائي (NIS):" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
            <TextField fx:id="nisField" styleClass="searchField" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="5" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>

        </GridPane>

    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">

        <Button onAction="#handleCancel" text="إلغاء" GridPane.halignment="CENTER" GridPane.rowIndex="11">
            <styleClass>
                <String fx:value="btn" />
                <String fx:value="cencel_btn" />
            </styleClass>
        </Button>
        <Button defaultButton="true" onAction="#handleUpdateFournisseur" text="إضافة" textAlignment="RIGHT" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="11">
            <styleClass>
                <String fx:value="btn" />
                <String fx:value="add_btn" />
            </styleClass>
        </Button>
        <VBox.margin>
            <Insets right="20.0" />
        </VBox.margin>
    </HBox>
</children>


    <stylesheets>
        <URL value="@../../css/all.css" />
    </stylesheets>
</VBox>
